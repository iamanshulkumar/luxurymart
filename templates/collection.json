{
  "sections": {
    "banner": {
      "type": "main-collection-banner",
      "custom_css": [
        ".media > img {object-fit: contain;}"
      ],
      "settings": {
        "show_collection_description": true,
        "show_collection_image": true,
        "color_scheme": "scheme-2"
      }
    },
    "product-grid": {
      "type": "main-collection-product-grid",
      "settings": {
        "products_per_page": 20,
        "columns_desktop": 4,
        "color_scheme": "scheme-2",
        "image_ratio": "square",
        "image_shape": "default",
        "show_secondary_image": true,
        "show_vendor": false,
        "show_rating": false,
        "quick_add": "none",
        "enable_filtering": true,
        "filter_type": "vertical",
        "enable_sorting": true,
        "columns_mobile": "2",
        "padding_top": 36,
        "padding_bottom": 36
      }
    }
  },
  "order": [
    "banner",
    "product-grid"
  ]
}
